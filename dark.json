{
  "version": 8,
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "sprite": "https://tiles.openfreemap.org/sprites/ofm_f384/ofm",
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#2f354b" }
    },
    {
      "id": "natural_earth",
      "type": "raster",
      "source": "ne2_shaded",
      "maxzoom": 7,
      "paint": {
        "raster-opacity": ["interpolate", ["exponential", 1.5], ["zoom"], 0, 0.35, 6, 0.05]
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "#145755",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landcover_desert",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "sand"],
      "paint": {
        "fill-color": "#2f354b",
        "fill-opacity": 1
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", ["get", "class"], "residential"],
      "paint": {
        "fill-color": "#1b2a3f",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landcover_wood",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "wood"],
      "paint": { "fill-color": "#133848", "fill-opacity": 0.5 }
    },
    {
      "id": "landcover_grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "grass"],
      "paint": { "fill-color": "#133848", "fill-opacity": 0.5 }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": { "fill-color": "#01102f" }
    },
    {
      "id": "water_outline_hide",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "water",
      "minzoom": 0,
      "paint": {
        "line-color": "#01102f",
        "line-width": 0
      }
    },
    {
      "id": "waterway_hide",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "waterway",
      "minzoom": 0,
      "paint": {
        "line-opacity": 0
      }
    },
    {
      "id": "aeroway_ref",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "aeroway",
      "minzoom": 12,
      "maxzoom": 17,
      "filter": ["has", "ref"],
      "layout": {
        "text-field": ["get", "ref"],
        "text-font": ["Noto Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 12, 9, 15, 13],
        "text-allow-overlap": false,
        "text-ignore-placement": false,
        "symbol-placement": "point"
      },
      "paint": {
        "text-color": "#cfd4da",
        "text-halo-color": "#2f354b",
        "text-halo-width": 1
      }
    },
    {
      "id": "aeroway_fill",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "aeroway",
      "filter": [
        "in",
        ["get", "class"],
        ["aerodrome", "heliport", "helipad"]
      ],
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "aerodrome", "#343a4f",
          "heliport", "#3b4259",
          "helipad", "#3b4259",
          "#2f354b"
        ],
        "fill-opacity": 0.9
      }
    },
    {
      "id": "runway",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "aeroway",
      "filter": ["==", ["get", "class"], "runway"],
      "paint": {
        "fill-color": "#c8ccd4",
        "fill-opacity": 0.9
    }
    },
    {
      "id": "taxiway",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "aeroway",
      "filter": ["==", ["get", "class"], "taxiway"],
      "paint": {
        "fill-color": "#8a90a1",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#2a2b2d",
        "fill-outline-color": "#3a3b3d"
      }
    },
    {
      "id": "road_motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "motorway"],
      "paint": {
        "line-color": "#405978",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 5, 0.8, 20, 18]
      }
    },
    {
      "id": "road_trunk_primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["match", ["get", "class"], ["primary", "trunk"], true, false],
      "paint": {
        "line-color": "#405978",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 5, 0.5, 20, 14]
      }
    },
    {
      "id": "road_secondary_tertiary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["match", ["get", "class"], ["secondary", "tertiary"], true, false],
      "paint": {
        "line-color": "#405978",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 8, 0.5, 20, 10]
      }
    },
    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "minor"],
      "paint": {
        "line-color": "#405978",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 13, 0.3, 20, 3]
      }
    },
    {
      "id": "road_path",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["match", ["get", "class"], ["path", "pedestrian"], true, false],
      "paint": {
        "line-color": "#405978",
        "line-dasharray": [1, 1],
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 14, 0.5, 20, 3]
      }
    },
    {
      "id": "boundary_country",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": [
        "all",
        ["==", ["get", "admin_level"], 2],
        ["!=", ["get", "maritime"], 1]
      ],
      "paint": {
        "line-color": "#6f7688",
        "line-width": ["interpolate", ["linear"], ["zoom"], 3, 0.5, 10, 2]
      }
    },
    {
      "id": "landcover_global_green",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "minzoom": 0,
      "maxzoom": 7,
      "filter": ["in", ["get", "class"], ["wood", "forest", "scrub", "grass"]],
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "wood", "#1d3a2f",
          "forest", "#1d3a2f",
          "scrub", "#223b33",
          "grass", "#1f4632",
          "#2f354b"
        ],
        "fill-opacity": ["interpolate", ["linear"], ["zoom"], 0, 0.3, 6, 0.45]
      }
    },
    {
      "id": "water_label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "water_name",
      "layout": {
        "symbol-placement": "line",
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["Noto Sans Italic"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#93b5e1",
        "text-halo-color": "#0e1626",
        "text-halo-width": 1.2
      }
    },
    {
      "id": "place_label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "layout": {
        "text-field": [
          "case",
          ["has", "name:nonlatin"],
          ["concat", ["get", "name:latin"], "\n", ["get", "name:nonlatin"]],
          ["coalesce", ["get", "name_en"], ["get", "name"]]
        ],
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 10, 12, 14]
      },
      "paint": {
        "text-color": "#dadce0",
        "text-halo-color": "#1a1a1a",
        "text-halo-width": 1.2
      }
    }
  ]
}
