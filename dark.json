{
  "version": 8,
  "sources": {
    "ne2_shaded": {
      "maxzoom": 6,
      "tileSize": 256,
      "tiles": ["https://tiles.openfreemap.org/natural_earth/ne2sr/{z}/{x}/{y}.png"],
      "type": "raster"
    },
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "sprite": "https://tiles.openfreemap.org/sprites/ofm_f384/ofm",
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#2f354b" }
    },
    {
      "id": "natural_earth",
      "type": "raster",
      "source": "ne2_shaded",
      "maxzoom": 7,
      "paint": {
        "raster-opacity": ["interpolate", ["exponential", 1.5], ["zoom"], 0, 0.35, 6, 0.05]
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "#145755",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landuse_residential",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", ["get", "class"], "residential"],
      "paint": {
        "fill-color": "#1b2a3f",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landcover_wood",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "wood"],
      "paint": { "fill-color": "#133848", "fill-opacity": 0.5 }
    },
    {
      "id": "landcover_grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "class"], "grass"],
      "paint": { "fill-color": "#133848", "fill-opacity": 0.5 }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": { "fill-color": "#01102f" }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#2a2b2d",
        "fill-outline-color": "#3a3b3d"
      }
    },
    {
      "id": "road_motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "motorway"],
      "paint": {
        "line-color": "#405978",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 5, 0.8, 20, 18]
      }
    },
    {
      "id": "road_trunk_primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["match", ["get", "class"], ["primary", "trunk"], true, false],
      "paint": {
        "line-color": "#405978",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 5, 0.5, 20, 14]
      }
    },
    {
      "id": "road_secondary_tertiary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["match", ["get", "class"], ["secondary", "tertiary"], true, false],
      "paint": {
        "line-color": "#405978",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 8, 0.5, 20, 10]
      }
    },
    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "minor"],
      "paint": {
        "line-color": "#405978",
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 13, 0.3, 20, 3]
      }
    },
    {
      "id": "road_path",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["match", ["get", "class"], ["path", "pedestrian"], true, false],
      "paint": {
        "line-color": "#405978",
        "line-dasharray": [1, 1],
        "line-width": ["interpolate", ["exponential", 1.2], ["zoom"], 14, 0.5, 20, 3]
      }
    },
    {
      "id": "boundary_country",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["==", ["get", "admin_level"], 2],
      "paint": {
        "line-color": "#3a3a3a",
        "line-width": ["interpolate", ["linear"], ["zoom"], 3, 0.5, 10, 2]
      }
    },
    {
      "id": "water_label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "water_name",
      "layout": {
        "symbol-placement": "line",
        "text-field": ["coalesce", ["get", "name_en"], ["get", "name"]],
        "text-font": ["Noto Sans Italic"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#93b5e1",
        "text-halo-color": "#0e1626",
        "text-halo-width": 1.2
      }
    },
    {
      "id": "place_label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "layout": {
        "text-field": [
          "case",
          ["has", "name:nonlatin"],
          ["concat", ["get", "name:latin"], "\n", ["get", "name:nonlatin"]],
          ["coalesce", ["get", "name_en"], ["get", "name"]]
        ],
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 4, 10, 12, 14]
      },
      "paint": {
        "text-color": "#dadce0",
        "text-halo-color": "#1a1a1a",
        "text-halo-width": 1.2
      }
    }
  ]
}
